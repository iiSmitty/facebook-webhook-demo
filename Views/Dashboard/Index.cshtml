@{
    ViewData["Title"] = "Facebook Webhook Demo";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/cyberpunk-theme.css" rel="stylesheet">
    <link href="~/css/dashboard.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        @await Html.PartialAsync("_Partials/_Header")
        @await Html.PartialAsync("_Partials/_ControlPanel")
        @await Html.PartialAsync("_Partials/_StatsCards")
        @await Html.PartialAsync("_Partials/_LeadsSection")
    </div>

    <div class="notification" id="notification">
        Lead acquired successfully! 🎉
    </div>

    <script src="~/js/dashboard.js"></script>
</body>
</html>